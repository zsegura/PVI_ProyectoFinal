@model List<DataModels.PviProyectoFinalDBStoredProcedures.SpListarServiciosResult>
@{
    ViewBag.Title = "GestionarServicios";
}

<h2>Gestionar Servicios</h2>


<table class="table table-bordered table-hover">
    <tr>
        <th>id</th>
        <th>Nombre</th>
        <th>Precio</th>
        <th>Categoria</th>
        <th>Estado</th>
        <th></th>
    </tr>

    @foreach (var servicios in Model)
    {
        <tr>
            <td>@servicios.Id_servicio</td> <!-- Correct property name -->
            <td>@servicios.Nombre</td>
            <td>@servicios.Precio</td>
            <td>@servicios.Id_categoria</td> <!-- Correct property name -->
            <td>@servicios.Estado</td>
            <td>
                @Html.ActionLink("Consultar", "GestionarServicios", "Condominio", new { id = servicios.Id_servicio }, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }

</table>