@model List<DataModels.PviProyectoFinalDBStoredProcedures.SpConsultarCobrosResult>

<h2>Consultar Cobros</h2>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>#Cobro</th>
            <th>#Casa</th>
            <th>Propietario</th>
            <th>Periodo</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cobro in Model)
        {
            <tr>
                <td>@cobro.Id_cobro</td>
                <td>@cobro.Nombre_casa</td>
                <td>@cobro.Cliente</td>
                <td>@($"{cobro.Mes:D2}/{cobro.Anno}")</td>
                <td>@cobro.Estado</td>
                <td>
                    @Html.ActionLink("Editar", "GestionarCobro", "Condominio", new { id = cobro.Id_cobro }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }
    </tbody>
</table>
